<?xml version="1.0" encoding="utf-8"?>
<com.menil.rottenmovies.NotifyingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_details_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <RelativeLayout
        android:id="@+id/fragment_details_card_relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.menil.rottenmovies.RemoteImageView
            android:id="@+id/fragment_details_img_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:layout_marginTop="-200dp"
            android:layout_marginBottom="-200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_ori2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_details_img_top">

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_details_card_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.menil.rottenmovies.RemoteImageView
                            android:id="@+id/fragment_details_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="120dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:adjustViewBounds="true"
                            android:layout_marginBottom="0.5dp"
                            android:layout_marginTop="0.5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/empty_img" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@id/fragment_details_img"
                            android:layout_toRightOf="@id/fragment_details_img"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/fragment_details_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:ellipsize="end"
                                android:maxLength="25"
                                android:text="@string/movie_title_placeholder"
                                android:textStyle="bold|italic"
                                android:textColor="@color/pale_black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/fragment_details_runtime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/runtime_placeholder"
                                android:textColor="@color/pale_black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/fragment_details_rating"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/rating_placeholder"
                                android:textColor="@color/pale_gray"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/fragment_details_cast"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/cast_placeholder"
                                android:textColor="@color/pale_gray"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_details_card_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_details_fab">

                <TextView
                    android:id="@+id/fragment_details_synopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:ellipsize="end"
                    android:gravity="fill_horizontal"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="7dp"
                    android:text="@string/synopsis"
                    android:textColor="@color/pale_black"
                    android:textSize="17sp" />

            </android.support.v7.widget.CardView>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fragment_details_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/fragment_details_card_title"
                android:layout_marginBottom="-30dp"
                android:layout_marginTop="-42dp"
                android:src="@drawable/ic_action_favorite"
                fab:fab_colorNormal="@color/green"
                fab:fab_colorPressed="@color/white" />

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fragment_details_fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/fragment_details_card_title"
                android:layout_marginBottom="-30dp"
                android:layout_marginTop="-35dp"
                android:src="@drawable/ic_action_expand"
                fab:fab_colorNormal="@color/green2"
                fab:fab_colorPressed="@color/white"
                fab:fab_type="mini"/>
        </RelativeLayout>

    </RelativeLayout>

</com.menil.rottenmovies.NotifyingScrollView>