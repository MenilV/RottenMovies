<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_details_card_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/fragment_details_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_details_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/empty_img"
                    android:contentDescription="@string/details_img" />

                <TextView
                    android:id="@+id/fragment_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@id/fragment_details_img"
                    android:layout_toRightOf="@id/fragment_details_img"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/movie_title_placeholder"
                    android:textColor="@color/pale_black"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fragment_details_title"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="37dp"
                    android:layout_toEndOf="@id/fragment_details_img"
                    android:layout_toRightOf="@id/fragment_details_img"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_details_runtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/runtime_placeholder"
                        android:textColor="@color/pale_black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/fragment_details_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/rating_placeholder"
                        android:textColor="@color/pale_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/fragment_details_cast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/cast_placeholder"
                        android:textColor="@color/green_700"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_details_card_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_details_card_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:layout_marginTop="7dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_details_genre_title"
            android:text="Movie genre:\n"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="-15dp"
            android:paddingTop="7dp"
            android:textColor="@color/pale_black"
            android:textSize="16sp" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/fragment_details_genres_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"/>
                    <ImageView
                        android:id="@+id/fragment_details_genres_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"/>
                    <ImageView
                        android:id="@+id/fragment_details_genres_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        />
                    <ImageView
                        android:id="@+id/fragment_details_genres_img4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#399322"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_details_card_synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_details_card_genres">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="7dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/fragment_details_synopsis_title"
                       android:text="@string/synopsis_title"
                       android:paddingEnd="10dp"
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:layout_marginBottom="-15dp"
                       android:textColor="@color/pale_black"
                       android:textSize="16sp" />
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="#399322"
                       android:layout_marginLeft="7dp"
                       android:layout_marginRight="7dp"
                       android:layout_marginBottom="7dp"/>
                   <TextView
                       android:id="@+id/fragment_details_synopsis"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="fill_horizontal"
                       android:paddingBottom="10dp"
                       android:paddingEnd="10dp"
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:text="@string/synopsis"
                       android:textColor="@color/pale_black"
                       android:textSize="15sp" />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/fragment_details_clips_title"
                       android:text="Movie clips:\n"
                       android:paddingEnd="10dp"
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:paddingTop="7dp"
                       android:layout_marginBottom="-15dp"
                       android:textColor="@color/pale_black"
                       android:textSize="16sp" />
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="#399322"
                       android:layout_marginLeft="7dp"
                       android:layout_marginRight="7dp"
                       android:layout_marginBottom="7dp"/>
                   <HorizontalScrollView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="7dp"
                       android:layout_marginRight="7dp"
                       android:layout_marginBottom="7dp">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <ImageView
                               android:id="@+id/fragment_details_clips_img1"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="4dp"/>
                           <ImageView
                               android:id="@+id/fragment_details_clips_img2"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="4dp"/>
                           <ImageView
                               android:id="@+id/fragment_details_clips_img3"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="4dp"/>
                           <ImageView
                               android:id="@+id/fragment_details_clips_img4"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="4dp"/>
                           <ImageView
                               android:id="@+id/fragment_details_clips_img5"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="4dp"/>
                           <ImageView
                               android:id="@+id/fragment_details_clips_img6"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="4dp"/>
                           <ImageView
                               android:id="@+id/fragment_details_clips_img7"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="4dp"/>


                           </LinearLayout>
                       </HorizontalScrollView>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/fragment_details_similar_title"
                       android:text="Similar Movies:\n"
                       android:paddingEnd="10dp"
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:paddingTop="7dp"
                       android:layout_marginBottom="-15dp"
                       android:textColor="@color/pale_black"
                       android:textSize="16sp" />
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="#399322"
                       android:layout_marginLeft="7dp"
                       android:layout_marginRight="7dp"
                       android:layout_marginBottom="7dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/fragment_details_similar"
                       android:gravity="fill_horizontal"
                       android:paddingBottom="10dp"
                       android:paddingEnd="10dp"
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:text="@string/synopsis"
                       android:textColor="@color/pale_black"
                       android:textSize="15sp"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/fragment_details_critics_title"
                       android:text="Critics score:\n"
                       android:paddingEnd="10dp"
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:paddingTop="7dp"
                       android:layout_marginBottom="-15dp"
                       android:textColor="@color/pale_black"
                       android:textSize="16sp" />
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="#399322"
                       android:layout_marginLeft="7dp"
                       android:layout_marginRight="7dp"
                       android:layout_marginBottom="7dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/fragment_details_critics"
                       android:gravity="fill_horizontal"
                       android:paddingBottom="10dp"
                       android:paddingEnd="10dp"
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:text="@string/synopsis"
                       android:textColor="@color/pale_black"
                       android:textSize="15sp"/>

                   </LinearLayout>
               </ScrollView>
            </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fragment_details_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fragment_details_card_title"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_action_favorite"
        sothree:fab_colorNormal="@color/green"
        sothree:fab_colorPressed="@color/green_500"
        sothree:fab_colorRipple="@android:color/white" />
</RelativeLayout>