<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?android:attr/actionBarSize">

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/others_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1"
        android:clickable="true"
        android:columnWidth="130dp"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:minHeight="@dimen/activity_horizontal_margin"
        android:minWidth="@dimen/activity_vertical_margin"
        android:numColumns="auto_fit"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:stretchMode="columnWidth"
        android:textColor="@color/pale_black"
        android:verticalSpacing="3dp">

    </GridView>
    <com.andexert.library.RippleView
        android:id="@+id/others_ripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        ripple:rv_rippleDuration="700">
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/others_gridview_list_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_up"
        fab:fab_colorNormal="@color/green"
        fab:fab_colorPressed="@color/green_900"
        fab:fab_colorRipple="@color/green_700" />
    </com.andexert.library.RippleView>
</FrameLayout>