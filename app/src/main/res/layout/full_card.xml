<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:layout_weight="1"
    android:background="@drawable/bg_card"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="2dp">

    <com.menil.rottenmovies.RemoteImageView
        android:id="@+id/full_card_img2"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:background="#f1f1f1"
        android:clickable="true"
        android:focusable="true"
        android:longClickable="true"
        android:scaleType="fitXY" />

    <TextView

        android:id="@+id/full_card_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="1dp"
        android:background="@drawable/black_opacity_75"
        android:contentDescription="movie_title"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>