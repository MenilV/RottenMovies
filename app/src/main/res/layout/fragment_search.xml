<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize">
    <SearchView
        android:id="@+id/search_textbox"
        android:layout_width="match_parent"
        android:imeOptions="actionSearch"
        android:queryHint="Search..."
        android:layout_height="wrap_content">
        </SearchView>

    <TextView
        android:id="@+id/search_no_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#399322"
        android:textSize="23sp"
        android:text="@string/no_movies_searched"
        android:layout_below="@id/search_textbox"
        android:visibility="gone"
        android:gravity="center"/>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_listview"
        android:layout_below="@id/search_textbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_color"
        android:headerDividersEnabled="true" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/search_list_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/abc_ic_search_api_mtrl_alpha"
        fab:fab_colorNormal="@color/green"
        fab:fab_colorPressed="@color/green_900"
        fab:fab_colorRipple="@color/green_700" />
</RelativeLayout>